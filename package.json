{
  "name": "focusflow",
  "version": "0.1.0",
  "private": true,
  "description": "Chrome extension + local daemon for distraction-aware development",
  "workspaces": [
    "extension",
    "daemon"
  ],
  "scripts": {
    "dev:extension": "pnpm --filter focusflow-extension dev",
    "dev:daemon": "pnpm --filter focusflow-daemon dev",
    "build:extension": "pnpm --filter focusflow-extension build",
    "build:daemon": "pnpm --filter focusflow-daemon build",
    "build": "pnpm build:daemon && pnpm build:extension",
    "dev": "concurrently \"pnpm dev:daemon\" \"pnpm dev:extension\"",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "typescript": "^5.7.3"
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20.0.0"
  }
}
