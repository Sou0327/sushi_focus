# FocusFlow Daemon Settings
# Copy this file to .env and customize

# Target app to focus (e.g., Cursor, Code, Terminal, iTerm, Antigravity)
FOCUS_APP=Cursor

# Enable/disable auto-focus
FOCUS_ENABLED=true

# Focus on need-input events
FOCUS_ON_NEED_INPUT=true

# Focus on done events
FOCUS_ON_DONE=true

# Daemon port
PORT=3000
